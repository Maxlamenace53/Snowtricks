{% extends 'base.html.twig' %}

{% block title %}tricks{% endblock %}

{% block body %}
    <h1>tricks</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ tricks.id }}</td>
            </tr>
            <tr>
                <th>Group</th>
                <td>{{ tricks.groupTrick.name}}</td>
            </tr>
            <tr>
                <th>NameTrick</th>
                <td>{{ tricks.nameTrick }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ tricks.description }}</td>
            </tr>
            <tr>
                <th>CreationDate</th>
                <td>{{ tricks.creationDate ? tricks.creationDate|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_trick_index') }}">back to list</a>

    <a href="{{ path('app_trick_edit', {'id': tricks.id}) }}">edit</a>

    {{ include('trick/_delete_form.html.twig') }}
{% endblock %}
