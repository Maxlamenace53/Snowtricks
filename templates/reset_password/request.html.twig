{% extends 'base.html.twig' %}

{% block title %}Réinitialisé ton mot de passe{% endblock %}

{% block body %}
    <div class="container__homepage--top" >
    {% for flash_error in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}
    <h1 class="content">Réinitialise ton mot de passe</h1>

    {{ form_start(requestForm) }}
        {{ form_row(requestForm.email) }}
        <div>
            <small class="content" >
                Entre ton adresse email et nous t'enverrons un lien pour réinitialiser ton mot de passe.
            </small>
        </div>

        <button class="btn btn-primary">Envoyer un e-mail de réinitialisation de mot de passe</button>
    {{ form_end(requestForm) }}
    </div>
{% endblock %}
